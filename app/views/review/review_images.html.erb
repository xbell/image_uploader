<h1>Review Images!</h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="picture-details" id="picture-details">
        <img><%= image_tag @picture.url.url(:big) %></img>
        <div class="photo-info">
          <li>Name: <%= @picture.name %></li>
          <li>Description: <%= @picture.description %></li>
          <li>Taken by: <%= link_to User.find(@picture.user_id).user, "#" %></li>
          <form class="radio">
            <button class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></button>
            <button class="glyphicon glyphicon-question-sign" aria-hidden="true"></button>
            <button class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></button>
          </form>
          <div>
            <textarea class="comment-input" type="textarea" id = "comment-input" name="comment" placeholder="Leave a Comment"/></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
