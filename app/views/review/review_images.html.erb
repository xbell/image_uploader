<h1>Review Images!</h1>

<div class=nil>
  <% if @picture == nil %>
    <h2><%= "You have reviewed all images." %></h2>
  <% else %>
</div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="picture-details" id="picture-details">
          <img><%= image_tag @picture.url.url(:big) %></img>
          <div class="photo-info">
            <li>Name: <%= @picture.name %></li>
            <li>Description: <%= @picture.description %></li>
            <li>Taken by: <%= link_to User.find(@picture.user_id).user, user_photos_path(user_id: @picture.user_id) %></li>
            <form action="<%= rate_image_path(id: @picture.id) %>" method="POST" class="rating" enctype="multipart/form-data">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
              <label for="rating" class="control-label input-group"></label>
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default">
                  <input name="rating" value="1" type="radio">
                  <span class="glyphicon glyphicon-thumbs-up"></span>
                </label>
                <label class="btn btn-default">
                  <input name="rating" value="0" type="radio">
                  <span class="glyphicon glyphicon-question-sign"></span>
                </label>
                <label class="btn btn-default">
                  <input name="rating" value="-1" type="radio">
                  <span class="glyphicon glyphicon-thumbs-down"></span>
                </label>
              </div>
              <div class="comment-input">
                <textarea type="textarea" id = "comment-input" name="comment" placeholder="Leave a Comment"/></textarea>
              </div>
              <button type="submit" class="btn btn-default comment-btn">Submit Review</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
