<h1>Add a Photo!</h1>

<%= gravatar_for "evieb16@msn.com" %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class = "form">

        <form action="/addpic" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
          <div>
            <h4>
              <label for="name-input">IMAGE NAME</label>
            </h4>
            <input class="name-input" type="text" id = "name-input" name="name" />
          </div>
          <div>
            <h4>
              <label for="description-input">IMAGE DESCRIPTION (optional)</label>
            </h4>
            <input class="description-input" type="text" id = "description-input" name="description" value="none"/>
          </div>
          <div>
            <h4>
              <label for="image-input">IMAGE URL</label>
            </h4>
            <input class="file" type="file" id = "image-input" name="url" />
          </div>
          <div class="submit">
            <input type="submit" class="btn btn-default" />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
