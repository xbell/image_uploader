<h1><%= @picture.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="picture-details" id="picture-details">
        <h2><%= @picture.name %></h2>
        <img><%= image_tag @picture.url %></img>
      </div>
    </div>
    <div clas="col-sm-3">
      <div class="photo-info">
        <li><%= @picture.name %></li>
        <li><%= @picture.description %></li>
      </div>
    </div>
  </div>
</div>
