<h1>My Account</h1>

<div class="container">
  <div class="row">
    <div class="col-md-12 account">
      <%= gravatar_for @user.email %>

      <form action="/myaccount" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
        <div>
          <h4>
            <label for="name-input">Update Email Address</label>
          </h4>
          <input class="email-input" type="text" id = "email-input" name="email" value="<%= current_user.email %>" />
        </div>
        <div class="update">
          <input type="submit" value="Update" class="btn btn-default" />
        </div>
      </form>


    </div>
  </div>
</div>
